<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="behat.rest.differ.simple_json" class="Behat\RestExtension\Differ\SimpleJsonDiffer"/>

        <service id="behat.rest.differ.coduo" class="Behat\RestExtension\Differ\CoduoDiffer">
            <argument type="service" id="behat.rest.differ.coduo.matcher"/>
        </service>

        <service id="behat.rest.differ.coduo.matcher.factory" class="Coduo\PHPMatcher\Factory\SimpleFactory" />

        <service id="behat.rest.differ.coduo.matcher" class="Coduo\PHPMatcher\Matcher">
            <factory service="behat.rest.differ.coduo.matcher.factory" method="createMatcher"/>
        </service>
    </services>
</container>